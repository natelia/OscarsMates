<section class="reviews py-10">
  <div class="container mx-auto px-4">
    <h3 class="text-center text-xl font-semibold text-slate-900">
      Reviews for <%= link_to @movie.title, @movie, class: "text-slate-600 hover:text-slate-800" %>
    </h3>

    <div class="mt-4 flex flex-wrap justify-center gap-2">
      <%= link_to "Home Page", root_path, class: "inline-flex items-center rounded-md border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-100" %>
      <%= link_to "Movie Details", @movie, class: "inline-flex items-center rounded-md border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-100" %>
    </div>

    <ul class="mx-auto mt-6 max-w-3xl space-y-3">
      <% @reviews.reverse_each do |review| %>
        <li class="rounded-lg border border-slate-200 bg-white px-4 py-3 text-center">
          <div class="review">
            <div class="stars">
              <%= render_stars(review.stars) %>
            </div>
            <div class="info">
              <p class="mt-2 text-sm">
                <%= link_to review.user.name, review.user, class: "font-semibold text-slate-900 hover:text-slate-700" %><br>
                <small class="text-muted"><%= time_ago_in_words(review.created_at) %> ago</small>
              </p>
              <p class="comment mt-2 text-sm text-slate-600">
                <%= review.comment %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</section>
