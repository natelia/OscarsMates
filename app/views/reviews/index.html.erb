<section class="reviews py-5">
  <div class="container">
    <h3 class="text-center mt-4 mb-4">
      Reviews for <%= link_to @movie.title, @movie, class: "movie-title" %>
    </h3>

    <div class="btn-container text-center mb-4">
      <%= link_to "Home Page", root_path, class: "btn btn-outline-dark me-2" %>
      <%= link_to "Movie Details", @movie, class: "btn btn-outline-dark" %>
    </div>

    <ul class="list-group">
      <% @reviews.reverse_each do |review| %>
        <li class="list-group-item">
          <div class="review text-center">
            <div class="stars">
              <%= render_stars(review.stars) %>
            </div>
            <div class="info">
              <p class="mb-1">
                <%= link_to review.user.name, review.user, class: "text-decoration-none text-dark" %><br>
                <small class="text-muted"><%= time_ago_in_words(review.created_at) %> ago</small>
              </p>
              <p class="comment mb-0">
                <%= review.comment %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</section>

<style>
  .movie-title {
    color: #6c757d;
    text-decoration: none;
  }

  .movie-title:hover {
    color: #5a6268;
  }
</style>
