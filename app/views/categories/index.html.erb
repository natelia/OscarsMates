<main class="categories-page">
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="page-title mb-0">Categories</h1>
        <p class="text-secondary mb-0"><%= current_year %> Academy Awards</p>
      </div>

      <div class="d-flex align-items-center gap-3">
        <form class="search-form" role="search" action="<%= categories_path(year: current_year) %>" method="get">
          <i class="bi bi-search search-icon"></i>
          <input class="search-input"
                 type="search"
                 name="query"
                 placeholder="Search..."
                 aria-label="Search"
                 value="<%= params[:query] %>">
        </form>

        <% if current_user_admin? %>
          <%= link_to new_category_path(year: current_year), class: "btn btn-oscar btn-sm" do %>
            <i class="bi bi-plus"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <% if @categories.any? %>
      <div class="category-cards-grid">
        <% @categories.each do |category| %>
          <%= link_to category_path(category, year: current_year), class: "category-card-mini" do %>
            <i class="bi <%= category_icon(category.name) %> category-card-icon"></i>
            <span class="category-card-name"><%= category.name %></span>
            <span class="category-card-count"><%= @movie_counts[category.id] || 0 %></span>
          <% end %>
        <% end %>
      </div>

      <%= render 'shared/pagination' %>
    <% else %>
      <% message = params[:query].present? ? "No results for \"#{params[:query]}\"." : "No categories available yet." %>
      <%= render 'shared/empty_state',
          icon: 'award',
          title: 'No categories found',
          message: message,
          action_path: params[:query].present? ? categories_path(year: current_year) : nil,
          action_text: 'Clear' %>
    <% end %>
  </div>
</main>
