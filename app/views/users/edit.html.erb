<section class="edit-account py-10">
  <div class="container mx-auto px-4">
    <h1 class="text-center text-2xl font-semibold text-slate-900">Edit Account</h1>

    <div class="mt-8 mx-auto max-w-2xl">
      <!-- Avatar Section -->
      <div class="mb-8 p-6 bg-white rounded-lg border border-slate-200 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900 mb-4">Profile Picture</h2>

        <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6">
          <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, data: { controller: "avatar-upload" } do |form| %>
            <div class="relative" data-avatar-upload-target="preview">
              <%= render "shared/avatar", user: @user, size: :xl, editable: true %>
              <%= form.file_field :avatar,
                    id: "avatar-upload",
                    accept: "image/png,image/jpeg,image/gif,image/webp",
                    class: "sr-only",
                    data: { avatar_upload_target: "input", action: "change->avatar-upload#preview change->avatar-upload#submit" } %>
            </div>

            <% if @user.errors[:avatar].any? %>
              <div class="mt-3 text-sm text-red-600">
                <%= @user.errors[:avatar].join(", ") %>
              </div>
            <% end %>
          <% end %>

          <div class="flex-1">
            <p class="text-sm text-slate-600 mb-2">Click on your avatar to upload a new photo</p>
            <p class="text-xs text-slate-500">PNG, JPG, GIF or WebP. Max 5MB.</p>

            <% if @user.avatar.attached? %>
              <div class="mt-4">
                <%= button_to avatar_user_path(@user),
                      method: :delete,
                      class: "btn-danger",
                      data: { turbo_confirm: "Remove your avatar?" } do %>
                  Remove avatar
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Account Details Section -->
      <div class="p-6 bg-white rounded-lg border border-slate-200 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900 mb-4">Account Details</h2>
        <%= render "form", user: @user %>
      </div>
    </div>
  </div>
</section>