<section class="sign-in py-10">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-md">
      <h1 class="text-center text-2xl font-semibold text-slate-900">Sign In</h1>

      <div class="mt-3 text-center text-sm text-slate-600">
        No account yet? <%= link_to "Sign Up!", signup_path, class: "font-semibold text-slate-900 hover:text-slate-700" %>
      </div>

      <%= form_with(url: create_session_path, local: true, class: "mt-8 space-y-4", novalidate: true) do |f| %>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "mt-2 w-full", placeholder: "Enter your email" %>
        </div>

        <div>
          <%= f.label :password %>
          <%= f.password_field :password, class: "mt-2 w-full", placeholder: "Enter your password" %>
        </div>

        <label class="flex items-center gap-2 text-sm text-slate-600">
          <%= f.check_box :remember_me %>
          <span>Remember me</span>
        </label>

        <div>
          <%= f.submit "Sign In!", class: "w-full rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
