<%= form_with model: movie do |form| %>
  <div class="container text-center">
    <div class="row">
      <div class = 'col'>
        <%= form.label :title %><br>
        <%= form.text_field :title%><br>
        <% movie.errors.full_messages_for(:title).each do |message| %>
          <div> <%= message %></div>
        <% end %>
      </div>

      <div class="col">
        <%= form.label :english_title %><br>
        <%= form.text_field :english_title %><br>
        <% movie.errors.full_messages_for(:english_title).each do | message | %>
          <div> <%= message %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= form.label :where_to_watch %><br>
        <%= form.text_field :where_to_watch %>
        <% movie.errors.full_messages_for(:where_to_watch).each do |message| %>
          <div> <%= message %></div>
        <% end %>
      </div>

      <div class="col">
        <%= form.label :runtime %><br>
        <%= form.text_field :runtime %>
        <% movie.errors.full_messages_for(:runtime).each do |message| %>
          <div> <%= message %></div>
        <% end %>
      </div>

      <div>
        <div class="col">
          <%= form.label :rating %><br>
          <%= form.text_field :rating %>
          <% movie.errors.full_messages_for(:rating).each do |message| %>
            <div> <%= message %></div>
          <% end %>
        </div>
      </div>
  <div class = 'row mt-3'>
    <div class = 'col'>
      <%= form.submit "Create Movie", class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>
 
<% end %>  