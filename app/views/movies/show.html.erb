<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .btn-details {
      background-color: #6c757d;
      color: white;
    }
    .btn-details:hover {
      background-color: #5a6268;
    }
    .movie-card {
      border: 1px solid #e9ecef;
      border-radius: 0.5rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .movie-card-body {
      padding: 3.5rem;
    }
    
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="card movie-card mb-4">
          <div class="row g-0">
            <!-- Movie Picture -->
            <div class="col-md-4">
              <img src="<%= @movie.picture_url %>" class="img-fluid" alt="Movie Picture">
            </div>

            <!-- Movie Details -->
            <div class="col-md-8">
              <div class="card-body movie-card-body">
                <h2 class="card-title"><%= @movie.title %></h2>
                <h4 class="card-subtitle mb-2 text-muted"><%= @movie.english_title %></h4>
                <p><strong>Where to watch:</strong> <%= @movie.where_to_watch %></p>
                <p><strong>Rating (0-10):</strong> <%= @movie.rating %></p>
                <p><strong>Runtime:</strong> <%= @movie.runtime %> mins</p>
                <a href="<%= @movie.url %>" class="btn btn-details btn-sm" target="_blank">Details</a>

                <!-- Genres -->
                <% if @genres.present? %>
                  <div class="mt-3">
                    <% @genres.each do |g| %>
                      <span class="badge bg-light text-dark me-2"><%= g.name %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Reviews and Actions -->
        <div class="mb-4">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <%= average_stars(@movie) %>
              <%= link_to pluralize(@movie.reviews.size, "review"), movie_reviews_path(@movie), class: "ms-2" %>
            </div>
            <div class="d-flex align-items-center gap-2">
              <% if current_user %>
                <div class="d-flex align-items-center gap-2">
                  <%= fave_or_unfave_button(@movie, @favorite) %>
                  <span class="ms-2"><%= @fans.size %></span>

                  <div class="btn-group-custom">
                    <% if @fans.present? %>
                      <button class="btn btn-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#fansList" aria-expanded="false" aria-controls="fansList">
                        Mates who liked
                      </button>
                      <div class="collapse mt-2" id="fansList">
                        <ul class="list-group list-group-flush small-text">
                          <% @fans.each do |user| %>
                            <li class="list-group-item">
                              <%= link_to user.name, user %>
                            </li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-outline-primary btn-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Additional Actions -->
        <ul class="list-group">
          <li class="list-group-item">
            <%= link_to "Home Page", root_path, class: "btn btn-outline-dark w-100" %>
          </li>
          <% if current_user_admin? %>
            <li class="list-group-item">
              <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-outline-dark w-100" %>
            </li>
            <li class="list-group-item">
              <%= link_to "Destroy", movie_path(@movie), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger w-100" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>
