<p><%= @movie.url %></p>
<p><%= @movie.picture_url %></p>

<div class="container text-center">
  <div class = 'row mt-3 justify-content-center'>

    <div class = 'col'>

      <div class="row mb-3">
        <div class="col">
          <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Movie Title</div>
            <div class="card-body">
              <h5 class="card-title"><h2><%= @movie.title %></h2></h5>  
            </div>
          </div>
        </div>

        <div class="col">
          <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">English Movie Title</div>
            <div class="card-body">
              <h5 class="card-title"><h1><%= @movie.english_title %></h1></h5>  
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col">
          <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Where to watch?</div>
            <div class="card-body">
              <h5 class="card-title"><p><%= @movie.where_to_watch %></p></h5>  
            </div>
          </div>
        </div>

        <div class="col">
          <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Rating (0-10)</div>
            <div class="card-body">
              <h5 class="card-title"><h4><%= @movie.rating %></h4></h5>  
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <div class="col-md-6">
          <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Runtime (in mins)</div>
            <div class="card-body">
              <h5 class="card-title"><h3><%= @movie.runtime %></h3></h5>  
            </div>
          </div>
        </div>
      </div>

      <ul>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><li> <%= link_to "Edit", edit_movie_path(@movie) %> </li></li>
          <li class="list-group-item"><li> <%= link_to "Home Page", root_path %> </li></li>
          <li class="list-group-item"><li> <%= link_to "Destroy", movie_path(@movie), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
            }%> </li></li>
        </ul>
      </ul>

    </div>

  </div>
</div>