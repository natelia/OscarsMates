<header class="bg-light py-3 shadow-sm" style="border-bottom: 2px solid #343a40;">
  <div class="container d-flex justify-content-between align-items-center">
    <h1 class="text-dark mb-0">Oscars Mates</h1>
    <nav>
      <ul class="nav">
        <li class="nav-item">
          <%= link_to users_path, class: "nav-link text-dark" do %>
            <i class="bi bi-people"></i> Mates
          <% end %>
        </li>

        <% if current_user&.admin? %>
          <li class="nav-item">
            <%= link_to 'Manage Categories', categories_path, class: "nav-link text-dark" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Categories', categories_path, class: 'nav-link text-dark'%>
          </li>
        <% end %>

        <% if current_user %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle"></i> <%= current_user.name %>
            </a>
            <ul class="dropdown-menu" aria-labelledby="userDropdown">
              <li><%= link_to "Account Settings", edit_user_path(current_user), class: "dropdown-item" %></li>
              <li><%= link_to "Sign Out", session_path, method: :delete, class: "dropdown-item text-danger", data: { turbo_method: :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to signin_path, class: "nav-link text-dark" do %>
              <i class="bi bi-box-arrow-in-right"></i> Sign In
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_path, class: "nav-link text-dark" do %>
              <i class="bi bi-person-plus"></i> Sign Up
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
